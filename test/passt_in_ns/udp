test	UDP/IPv6: ns to guest (using namespace address)
guestb	socat -u UDP6-LISTEN:10001,null-eof OPEN:test.bin,create,trunc
nsout	ADDR6 ip -j -6 addr show|jq -rM '.[] | select(.ifname == "__IFNAME__").addr_info[0].local'
sleep	1
